<Window x:Class="MorningWebsiteLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Morning Website Launcher" Height="500" Width="600"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Icon="app-icon.ico">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Morning Website Launcher" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Website List -->
        <GroupBox Grid.Row="1" Header="Websites to Open" Margin="0,0,0,20">
            <ListBox x:Name="websiteListBox" 
                     SelectionMode="Single"
                     FontFamily="Consolas"
                     FontSize="12"/>
        </GroupBox>

        <!-- Add Website Section -->
        <GroupBox Grid.Row="2" Header="Add New Website" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="newWebsiteTextBox" 
                         Width="350" Height="25" 
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"/>
                <Button x:Name="addWebsiteButton" 
                        Content="Add" Width="60" Height="25"
                        Click="AddWebsiteButton_Click"/>
                <Button x:Name="removeWebsiteButton" 
                        Content="Remove Selected" Width="100" Height="25"
                        Click="RemoveWebsiteButton_Click"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="launchAllButton" 
                    Content="ðŸš€ Launch All Websites" 
                    Width="200" Height="50"
                    FontSize="16" FontWeight="Bold"
                    Background="LightGreen"
                    Click="LaunchAllButton_Click"
                    Margin="0,0,20,0"/>
            <Button x:Name="exitButton" 
                    Content="Exit" 
                    Width="80" Height="50"
                    Click="ExitButton_Click"/>
        </StackPanel>

        <!-- Status -->
        <!-- Status and Credits -->
        <Grid Grid.Row="4">
            <Label x:Name="statusLabel" 
           Content="Ready to launch websites..." 
           HorizontalAlignment="Center"
           FontStyle="Italic"/>
            <Label Content="Created by Teddy Jones" 
           HorizontalAlignment="Left"
           VerticalAlignment="Bottom"
           FontSize="10"
           Foreground="Gray"
           Margin="5,0,0,5"/>
        </Grid>
    </Grid>
</Window>
